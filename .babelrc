{
  // Javascript settings.
  "presets": [
    "es2015",
    "react",
    "stage-2",
  ],
  "plugins": [
    "lodash"
  ],
  // Share polyfills between files.
  "env": {
    "test": {
      "plugins": [ "istanbul" ]
    },
    "hot": {
      "plugins": [
        [
          "react-transform",
          {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                // see transform docs for "imports" and "locals" dependencies
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              },
              {
                "transform": "react-transform-catch-errors",
                "imports": [
                  "react",
                  "redbox-react"
                ]
              }
            ]
          }
        ],
      ]
    }
  },
}
