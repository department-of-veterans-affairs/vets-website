{
  "reporter": ["text", "lcov", "json-summary"],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": [
    "src/platform/testing/**",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.unit.spec.js",
    "**/*.unit.spec.jsx",
    "**/*.d.ts",
    "node_modules/**"
  ],
  "all": true,
  "sourceMap": false,
  "excludeAfterRemap": false
}