          "size": {
            "type": "integer"
          },
          "confirmationCode": {
            "type": "string"
          }
        }
      }
    },
    "fullName": {
      "type": "object",
      "properties": {
        "first": {
          "type": "string",
          "minLength": 1,
          "maxLength": 15
        },
        "middle": {
          "type": "string",
          "maxLength": 15
        },
        "last": {
          "type": "string",
          "minLength": 1,
          "maxLength": 25
        },
        "suffix": {
          "type": "string",
          "enum": [
            "Jr.",
            "Sr.",
            "II",
            "III",
            "IV"
          ]
        },
        "maiden": {
          "type": "string",
          "maxLength": 15
        }
      },
      "required": [
        "first",
        "last"
      ]
