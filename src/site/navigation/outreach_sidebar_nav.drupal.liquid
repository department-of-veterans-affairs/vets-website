<nav id="va-detailpage-sidebar" data-drupal-sidebar
    class="va-c-facility-sidebar usa-width-one-fourth va-sidebarnav">
    <div>
        <button class="va-btn-close-icon va-sidebarnav-close" type="button"
            aria-label="Close this menu"></button>
        <div class="left-side-nav-title">
            <h4>{{ outreachSidebar.name }}</h4>
        </div>
        <ul class="usa-accordion">
            {% for link in outreachSidebar.links %}
            <li>
                {% assign pathArray = entityUrl.path | split: '/' %}
                {% assign pathRoot = pathArray | get: 2 | capitalize %}
                {% assign deepLinksString = link.links | findCurrentPathDepth: entityUrl.path %}
                {% assign deepLinksObj = deepLinksString | jsonToObj %}
                {% assign depth = deepLinksObj.depth  %}

                <button class="usa-accordion-button"
                        {% if deepLinksString == "false" and forloop.index == 1 and depth is null %}
                            aria-expanded="true"
                        {% else %}
                            aria-expanded="false"
                        {% endif %}
                    aria-controls="a{{ forloop.index }}">
                    <a href="{{ link.url.path }}"
                        onClick="recordEvent({ event: 'nav-sidenav' });">{{ link.label }}</a>
                </button>
                <div id="a{{ forloop.index }}" class="usa-accordion-content"
                    aria-hidden="false">
                    {% if link.expanded == true %}
                    <ul class="usa-sidenav-list">
                        {% for link in link.links %}
                        {% if link.expanded == true %}
                        <li {% if entityUrl.path contains link.url.path %}
                            class="active-level" {% endif %}>
                            <a {% if link.url.path == entityUrl.path %}
                                class="usa-current" {% endif %}
                                href="{{ link.url.path }}"
                                onClick="recordEvent({ event: 'nav-sidenav' });">{{ link.label }}</a>
                            <ul class="usa-sidenav-sub_list">
                                {% for link in link.links  %}
                                <li {% if entityUrl.path contains link.url.path  %}
                                    class="active-level" {% endif %}>
                                    <a {% if link.url.path == entityUrl.path %}
                                        class="usa-current" {% endif %}
                                        href="{{ link.url.path }}"
                                        onClick="recordEvent({ event: 'nav-sidenav' });">{{ link.label }}</a>
                                </li>
                                {% endfor %}
                            </ul>
                        </li>
                        {% else %}
                        <li>
                            <a {% if entityUrl.path contains link.url.path  %}
                                class="usa-current" {% endif %}
                                href="{{ link.url.path }}"
                                onClick="recordEvent({ event: 'nav-sidenav' });">{{ link.label }}</a>
                        </li>
                        {% endif %}
                        {% endfor %}
                    </ul>
                    {% endif %}
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
</nav>
