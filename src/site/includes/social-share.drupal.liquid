<div id="va-c-social-share">
    <ul class="vads-u-margin-bottom--1 usa-unstyled-list">
        <li>
            <a href="">
                <i class="va-c-social-icon fas fa-calendar-check vads-u-margin-right--0p5"></i>Add to Calendar
            </a>
        </li>

        <li>
            <a href="https://www.facebook.com/sharer/sharer.php?u={{ hostUrl }}{{ entityUrl.path }}"
                class="va-js-share-link">
                <i class="va-c-social-icon fab fa-facebook vads-u-margin-right--0p5"></i>Share on Facebook
            </a>
        </li>

        <li>
            <a href="https://twitter.com/intent/tweet?text={{ title }}&url={{ hostUrl }}{{ entityUrl.path }}"
               class="va-js-share-link">
               <i class="va-c-social-icon fab fa-twitter vads-u-margin-right--0p5"></i>Share on Twitter
            </a>
        </li>
    </ul>
</div>