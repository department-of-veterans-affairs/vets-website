<!-- this template needs to be included inside a <dl/> -->
<!-- media list -->
{%if images.size != 0%} 
    {% assign pageSize = 10 %}
    {% assign setOfRecords = 0 %}
    {% for mediaImage in images %}
        {% assign recordsCount = recordsCount | plus: 1 %}
        {% assign remainingImages = images | sliceArray: pageSize %}
        {%unless recordsCount > pageSize %}
            <div classname="vads-u-display--flex vads-u-margin-bottom--2">
                {% assign alt = mediaImage.entity.image.alt %}
                {% if alt == mediaImage.entity.entityLabel %}
                    {% assign alt = '' %}
                    {{ testing }}
                {% endif %}
                <div class="vads-l-grid-container vads-u-padding-x--0 vads-u-margin-y--2">
                    <div class="vads-l-row small-screen:vads-l-col">
                        <dt class="medium-screen:vads-u-display--none">
                            <{{image_title_tag}} class="{{image_title_classes }} vads-u-margin-top--0">{{ mediaImage.entity.entityLabel }}</{{image_title_tag}}>
                        </dt>
                        <dd class="medium-screen:vads-l-col--2">
                            <picture>
                                <img class="vads-u-border--1px vads-u-border-color--gray-light" alt="{{ alt }}" height="{{ mediaImage.entity.image.height }}" width="{{ mediaImage.entity.image.width }}" src="{{ mediaImage.entity.image.url }}"/>
                            </picture>
                        </dd>
                        <dt class="vads-l-col--10 medium-screen:vads-u-padding-left--2 vads-u-margin-top--0">
                            <{{image_title_tag}} class="{{image_title_classes }} vads-u-display--none  medium-screen:vads-u-display--block vads-u-margin-top--0">{{ mediaImage.entity.entityLabel }}</{{image_title_tag}}>
                            {% if mediaImage.entity.fieldDescription %}
                                <p>{{ mediaImage.entity.fieldDescription }}</p>
                            {% endif %}
                        </dt>
                    </div>
                </div>
            </div>
        {%endunless %}
    {% endfor %}
    {% if recordsCount > pageSize %}
        <div class="form-expanding-group additional-info-container">
            <span class="additional-info-title">Show More Images</span>
            <span>
                <div class="additional-info-content">
                {% for mediaImage in remainingImages %}
                    <!-- abstract out repeated template -->
                    <div classname="vads-u-display--flex vads-u-margin-bottom--2">
                        {% assign alt = mediaImage.entity.image.alt %}
                        {% if alt == mediaImage.entity.entityLabel %}
                            {% assign alt = '' %}
                            {{ testing }}
                        {% endif %}
                        <div class="vads-l-grid-container vads-u-padding-x--0 vads-u-margin-y--2">
                            <div class="vads-l-row small-screen:vads-l-col">
                                <dt class="medium-screen:vads-u-display--none">
                                    <{{image_title_tag}} class="{{image_title_classes }} vads-u-margin-top--0">{{ mediaImage.entity.entityLabel }}</{{image_title_tag}}>
                                </dt>
                                <dd class="medium-screen:vads-l-col--2">
                                    <picture>
                                        <img class="vads-u-border--1px vads-u-border-color--gray-light" alt="{{ alt }}" height="{{ mediaImage.entity.image.height }}" width="{{ mediaImage.entity.image.width }}" src="{{ mediaImage.entity.image.url }}"/>
                                    </picture>
                                </dd>
                                <dt class="vads-l-col--10 medium-screen:vads-u-padding-left--2 vads-u-margin-top--0">
                                    <{{image_title_tag}} class="{{image_title_classes }} vads-u-display--none  medium-screen:vads-u-display--block vads-u-margin-top--0">{{ mediaImage.entity.entityLabel }}</{{image_title_tag}}>
                                    {% if mediaImage.entity.fieldDescription %}
                                        <p>{{ mediaImage.entity.fieldDescription }}</p>
                                    {% endif %}
                                </dt>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </span>
        </div>
    {% endif %}
{%endif %}

