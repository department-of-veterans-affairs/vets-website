{
  "extends": "../../../config/base-tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "../../../src",
    "paths": {
      "platform/*": ["platform/*"],
      "~/*": ["*"]
    }
  },
  "include": [
    "**/*",
    "../../../config/web-components.d.ts",
    "types/**/*"
  ]
}
