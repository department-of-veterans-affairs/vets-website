{
  "schema": {
    "type": "object",
    "properties": {
      "phoneAndEmail": {
        "type": "object",
        "required": [
          "emailAddress"
        ],
        "properties": {
          "primaryPhone": {
            "$ref": "#/definitions/nonRequiredPhone"
          },
          "emailAddress": {
            "$ref": "#/definitions/email"
          }
        }
      },
      "mailingAddress": {
        "properties": {
          "view:livesOnMilitaryBase": {
            "type": "boolean"
          },
          "view:livesOnMilitaryBaseInfo": {
            "type": "object",
            "properties": {}
          },
          "country": {
            "$ref": "#/definitions/country"
          },
          "addressLine1": {
            "type": "string",
            "maxLength": 20,
            "pattern": "^([-a-zA-Z0-9'.,&#][ ]?)+$"
          },
          "addressLine2": {
            "type": "string",
            "maxLength": 20,
            "pattern": "^([-a-zA-Z0-9'.,&#][ ]?)+$"
          },
          "addressLine3": {
            "type": "string",
            "maxLength": 20,
            "pattern": "^([-a-zA-Z0-9'.,&#][ ]?)+$"
          },
          "city": {
            "type": "string",
            "maxLength": 30,
            "pattern": "^([-a-zA-Z0-9'.#][ ]?)+$"
          },
          "state": {
            "$ref": "#/definitions/state"
          },
          "zipCode": {
            "type": "string",
            "pattern": "^\\d{5}(?:([-\\s]?)\\d{4})?$"
          }
        },
        "type": "object",
        "required": [
          "country",
          "city",
          "addressLine1"
        ]
      },
      "view:contactInfoDescription": {
        "type": "object",
        "properties": {}
      }
    }
