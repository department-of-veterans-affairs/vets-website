{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Covid Vaccine Trial",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 80,
      "format": "email"
    },
    "fullName": {
      "type": "object",
      "properties": {
        "first": {
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "middle": {
          "type": "string"
        },
        "last": {
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "suffix": {
          "type": "string",
          "enum": ["Jr.", "Sr.", "II", "III", "IV"]
        }
      },
      "required": ["first", "last"]
    },
    "date": {
      "pattern": "^(\\d{4}|XXXX)-(0[1-9]|1[0-2]|XX)-(0[1-9]|[1-2][0-9]|3[0-1]|XX)$",
      "type": "string"
    }
  },
  "properties": {
    "descriptionText": {
      "type": "object",
      "properties": {
        "view:descriptionText": {
          "type": "object",
          "properties": {}
        }
      }
    },
    "infoSharingText": {
      "type": "object",
      "properties": {
        "view:infoSharingText": {
          "type": "object",
          "properties": {}
        }
      }
    },
    "healthHeaderText": {
      "type": "object",
      "properties": {
        "view:healthText": {
          "type": "object",
          "properties": {}
        }
      }
    },
    "exposureRiskHeaderText": {
      "type": "object",
      "properties": {
        "view:exposureRiskText": {
          "type": "object",
          "properties": {}
        }
      }
    },
    "residentsInHome": {
      "type": "string",
      "enum": ["ONE_TWO", "THREE_FIVE", "SIX_TEN", "MORE_THAN_TEN"]
    },
    "healthHistory": {
      "type": "object",
      "properties": {
        "ALLERGY_VACCINE": {
          "type": "boolean"
        },
        "AUTOIMMUNE_DISEASE": {
          "type": "boolean"
        },
        "CANCER": {
          "type": "boolean"
        },
        "DIABETES": {
          "type": "boolean"
        },
        "HEART_DISEASE": {
          "type": "boolean"
        },
        "HIGH_BLOOD_PRESSURE": {
          "type": "boolean"
        },
        "IMMUNOCOMPROMISED": {
          "type": "boolean"
        },
        "KIDNEY_LIVER_DISEASE": {
          "type": "boolean"
        },
        "LUNG_DISEASE": {
          "type": "boolean"
        },
        "STROKE": {
          "type": "boolean"
        },
        "ANOTHER_SERIOUS_CHRONIC_ILLNESS": {
          "type": "boolean"
        }
      }
    },
    "diagnosed": {
      "type": "boolean"
    },
    "closeContactPositive": {
      "type": "string",
      "enum": ["YES", "NO", "UNSURE"]
    },
    "hospitalized": {
      "type": "boolean"
    },
    "smokeOrVape": {
      "type": "boolean"
    },
    "employmentStatus": {
      "type": "object",
      "properties": {
        "EMPLOYED_HOME": {
          "type": "boolean"
        },
        "EMPLOYED_OUTSIDE_OF_HOME": {
          "type": "boolean"
        },
        "FRONTLINE_WORKER": {
          "type": "boolean"
        },
        "FURLOUGHED_UNEMPLOYED": {
          "type": "boolean"
        },
        "RETIRED": {
          "type": "boolean"
        },
        "STUDENT": {
          "type": "boolean"
        },
        "NONE_OF_ABOVE": {
          "type": "boolean"
        }
      }
    },
    "transportation": {
      "type": "object",
      "properties": {
        "CAR": {
          "type": "boolean"
        },
        "FREQUENT_AIR_TRAVEL": {
          "type": "boolean"
        },
        "PUBLIC_TRANSPORT": {
          "type": "boolean"
        },
        "WALK_BIKE": {
          "type": "boolean"
        },
        "WORK_FROM_HOME": {
          "type": "boolean"
        },
        "NONE_OF_ABOVE": {
          "type": "boolean"
        }
      }
    },
    "closeContact": {
      "type": "string",
      "enum": [
        "ZERO",
        "ONE_TEN",
        "ELEVEN_THIRTY",
        "THIRTYONE_FIFTY",
        "MORE_THAN_FIFTY"
      ]
    },
    "contactHeaderText": {
      "type": "object",
      "properties": {
        "view:contactText": {
          "type": "object",
          "properties": {}
        }
      }
    },
    "zipCode": {
      "type": "string",
      "pattern": "^(\\d{5})(?:[-](\\d{4}))?$"
    },
    "height": {
      "type": "object",
      "properties": {
        "heightFeet": {
          "type": "string",
          "enum": [
            "TWO",
            "THREE",
            "FOUR",
            "FIVE",
            "SIX",
            "SEVEN",
            "EIGHT",
            "NINE"
          ]
        },
        "heightInches": {
          "type": "string",
          "enum": [
            "ZERO",
            "ONE",
            "TWO",
            "THREE",
            "FOUR",
            "FIVE",
            "SIX",
            "SEVEN",
            "EIGHT",
            "NINE",
            "TEN",
            "ELEVEN",
            "TWELVE"
          ]
        }
      }
    },
    "weight": {
      "type": "string"
    },
    "gender": {
      "type": "object",
      "properties": {
        "FEMALE": {
          "type": "boolean"
        },
        "MALE": {
          "type": "boolean"
        },
        "TRANSGENDER_FEMALE": {
          "type": "boolean"
        },
        "TRANSGENDER_MALE": {
          "type": "boolean"
        },
        "GENDER_VARIANT": {
          "type": "boolean"
        },
        "SELF_IDENTIFY": {
          "type": "boolean"
        },
        "PREFER_NO_ANSWER": {
          "type": "boolean"
        }
      }
    },
    "raceEthnicityOrigin": {
      "type": "object",
      "properties": {
        "AMERICAN_INDIAN_ALASKA_NATIVE": {
          "type": "boolean"
        },
        "ASIAN": {
          "type": "boolean"
        },
        "BLACK_AFRICAN_AMERICAN": {
          "type": "boolean"
        },
        "HISPANIC_LATINO_SPANISH_ORIGIN": {
          "type": "boolean"
        },
        "HAWAIIAN_PACIFIC_ISLANDER": {
          "type": "boolean"
        },
        "WHITE": {
          "type": "boolean"
        },
        "OTHER_RACE_ETHNICITY": {
          "type": "boolean"
        },
        "PREFER_NO_ANSWER": {
          "type": "boolean"
        }
      }
    },
    "email": {
      "$ref": "#/definitions/email"
    },
    "veteranFullName": {
      "$ref": "#/definitions/fullName"
    },
    "veteranDateOfBirth": {
      "$ref": "#/definitions/date"
    }
  },
  "required": ["fullName"]
}
