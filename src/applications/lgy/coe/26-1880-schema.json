                  "Air Force Reserve",
                  "Air National Guard",
                  "Army",
                  "Army National Guard",
                  "Army Reserve",
                  "Coast Guard",
                  "Coast Guard Reserve",
                  "Marine Corps",
                  "Marine Corps Reserve",
                  "NOAA",
                  "Navy",
                  "Navy Reserve",
                  "Public Health Service"
                ]
              },
