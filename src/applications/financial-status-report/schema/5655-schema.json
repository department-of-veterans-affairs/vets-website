{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Financial Status Report 5655",
  "type": "object",
  "definitions": {
    "fullName": {
      "type": "object",
      "properties": {
        "first": {
          "type": "string",
          "ui:title": "First name",
          "minLength": 1,
          "maxLength": 30
        },
        "middle": {
          "type": "string",
          "ui:title": "Middle name"
        },
        "last": {
          "type": "string",
          "ui:title": "Last name",
          "minLength": 1,
          "maxLength": 30
        },
        "suffix": {
          "type": "string",
          "ui:title": "Middle name",
          "enum": ["Jr.", "Sr.", "II", "III", "IV"]
        }
      },
      "required": ["first", "last"]
    },
    "ssn": {
      "type": "string",
      "pattern": "^[0-9]{9}$"
    },
    "fileNumber": {
      "type": "string",
      "pattern": "^[cC]{0,1}\\d{7,9}$"
    },
    "date": {
      "pattern": "^(\\d{4}|XXXX)-(0[1-9]|1[0-2]|XX)-(0[1-9]|[1-2][0-9]|3[0-1]|XX)$",
      "type": "string"
    }
  },
  "properties": {
    "veteranFullName": {
      "$ref": "#/definitions/fullName"
    },
    "veteranSocialSecurityNumber": {
      "$ref": "#/definitions/ssn"
    },
    "veteranDateOfBirth": {
      "$ref": "#/definitions/date"
    },
    "vaFileNumber": {
      "$ref": "#/definitions/fileNumber"
    }
  }
}
